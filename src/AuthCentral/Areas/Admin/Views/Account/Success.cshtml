@using Fsw.Enterprise.AuthCentral.Models
@model CreateAccountInputModel
@{
    ViewBag.Title = "New user account";
}

<h2>User Created</h2>
@if(true.Equals(ViewData["RequireAccountVerification"])) { 
<p>
    The new user should recieve an email shortly
    @if(Model != null)
    {
        @: at @Model.Email
    }.
    It will contain instructions to verify their account
    so that they can login.
</p>
}
else
{
    <p>You can now login @Html.ActionLink("here", "Index", "Login").</p>
}
<p>Thanks!</p>
    