@addTagHelper "*, cloudscribe.Web.Pagination"
@model Fsw.Enterprise.AuthCentral.Areas.Admin.Models.ClientListViewModel
@{
    ViewBag.Title = "Client Admin Home";
}

<div class="container">
   <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <em>@ViewBag.Message</em>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-6">
            <h3>Find a Client by ClientId</h3>
            @using (Html.BeginForm("Edit", "Client", new {area = "Admin" }, FormMethod.Post, new {@id = "search-form", @class = "form-horizontal",  @onsubmit = "javascript: location.href='/Admin/Client/Edit/'+document.forms['search-form'].clientId.value; return false;" } )) 
            {
                <div class="form-group">
                    <div  class="control-label col-sm-2 col-md-2 col-lg-2" >
                        <label for="clientId">ClientId</label>
                    </div>
                    <div  class="editor-field col-sm-5 col-md-5 col-lg-5" >
                        <input type="text" class="form-control" id="clientId" name="clientId" placeholder="ClientId">
                    </div>
                    <div  class="control-control col-sm-5 col-md-5 col-lg-5" >
                        <button type="submit" class="btn btn-primary">Search &raquo;</button>
                    </div>
                </div>
            }
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6">
            <h3>Create a New Client</h3>
            <p> <a href="/Admin/Client/Create" class="btn btn-primary">Create Client &raquo;</a></p>
        </div>
    </div>
    <table class="table table-striped table-hover col-sm-12 col-md-12 col-lg-12">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Disable</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var client in Model.Clients)
            {
                <tr>
                    <td><a href="/Admin/Client/Edit/@client.ClientId">@client.ClientName</a></td>
                    <td>@client.AccessTokenType</td>
                    <td>
                        @if (client.Enabled)
                        {
                            @using (Html.BeginForm("Disable", "Client", new { clientId = client.ClientId, page = Model.PageNumber, area = "Admin" }, FormMethod.Post)) {
                                @Html.AntiForgeryToken()
                                <input type="submit" value="Disable" />
                            }
                        } else {
                            @using (Html.BeginForm("Enable", "User", new { clientId = client.ClientId, page = Model.PageNumber, area = "Admin" }, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <input type="submit" value="Enable" />
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <cs-pager cs-paging-pagesize="@Model.PageSize"
              cs-paging-pagenumber="@Model.PageNumber"
              cs-paging-totalitems="@Model.TotalItemCount"
              cs-pagenumber-param="page"
              asp-controller="Client"
              asp-action="Index"></cs-pager>
</div>
<hr />