@model Fsw.Enterprise.AuthCentral.Areas.Admin.Models.ScopeModel

<form asp-controller="Scope" asp-action="Edit" class="form-horizontal" method="post">
    <input asp-for="Name" type="hidden" name="scopeName"/>
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="DisplayName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="DisplayName" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Required" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Required" class="checkbox"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Emphasize" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Emphasize" class="checkbox"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <select asp-for="Type" asp-items="Html.GetEnumSelectList<IdentityServer3.Core.Models.ScopeType>()"></select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="IncludeAllClaimsForUser" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="IncludeAllClaimsForUser" class="checkbox"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ClaimsRule" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="ClaimsRule" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ShowInDiscoveryDocument" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="ShowInDiscoveryDocument" class="checkbox"/>
        </div>
    </div>
    <div class="form-group panel panel-footer">
        <button class="btn btn-primary" type="submit">Save</button>
        <button class="btn btn-default" type="button" onclick="$('#edit_@Model.Name').addClass('hidden'); $('#show_@Model.Name').removeClass('hidden'); $('#editScopeBtn_@Model.Name').removeClass('hidden');">Cancel</button>
    </div>
</form>