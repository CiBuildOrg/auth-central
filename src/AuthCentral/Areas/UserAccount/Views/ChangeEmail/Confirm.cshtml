@using Microsoft.AspNet.Mvc.Rendering
@model Fsw.Enterprise.AuthCentral.Areas.UserAccount.Models.ChangeEmailFromKeyInputModel

@{
    ViewBag.Title = "Confirm Email";
}

<div class="container">
    <div class="page-header">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<div class="container page-login">
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">@ViewBag.Title</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Confirm", "ChangeEmail", null, FormMethod.Post, null))
                    {
                        @Html.ValidationSummary("Error")
                        @Html.AntiForgeryToken()

                        <fieldset>
                            @Html.EditorForModel()

                            <div class="form-group">
                                <button class="btn btn-primary">Confirm Email</button>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>