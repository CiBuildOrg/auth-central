@using Microsoft.AspNet.Mvc.Rendering
@model Fsw.Enterprise.AuthCentral.Areas.UserAccount.Models.ChangeEmailFromKeyInputModel

@{
    ViewBag.Title = "Confirm Email";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Confirm", "ChangeEmail", null, FormMethod.Post, null))
{
    @Html.ValidationSummary("Error")
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>@ViewBag.Title</legend>

        @Html.EditorForModel()

        <div class="buttons">
            <button>Confirm Email</button>
        </div>
    </fieldset>
}
