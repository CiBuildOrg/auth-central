@{
    ViewBag.Title = "Password Changed";
}

<h2>Password Changed</h2>
<p>
    Your password has been changed.
    @if (User.Identity.IsAuthenticated)
    {
        @: You are now logged in.
    }
    else
    {
        <div>
            You can now login
            @Html.ActionLink("here", "Details", "Home", new { area = "UserAccount" }, null).
        </div>
    }
</p>
