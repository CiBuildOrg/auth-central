@model Fsw.Enterprise.AuthCentral.Areas.UserAccount.Models.RegisterInputModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-xs-12 text-center">
        <h1>Create an Account</h1>
    </div>
</div>

<div class="row create-account">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">

        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        @using (Html.BeginForm())
                        {
                        @Html.AntiForgeryToken()

                        if (!Html.ViewData.ModelState.IsValid)
                        {
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="alert alert-danger">
                                    @Html.ValidationSummary("Please correct the following errors")
                                </div>
                            </div>
                        </div>
                        }

                        <div class="row">
                            <div class="col-xs-12">
                                <fieldset>
                                    @Html.EditorForModel()
                                    <div class="text-center">
                                        <button class="btn btn-primary">Create an Account</button>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row help-text">
            <div class="col-xs-12">
                <p><strong>Need Help?</strong> Call an FSW Customer Service Representative Toll Free at <span class="text-fsw">1-877-877-5655</span> or email <a href="mailto:support@fsw.com">support@fsw.com</a> (for employees).</p>
            </div>
        </div>

    </div>
</div>