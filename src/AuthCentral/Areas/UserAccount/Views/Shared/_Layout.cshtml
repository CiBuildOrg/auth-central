<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/app/Site.css" rel="stylesheet" />
</head>
<body>
    <ul>
        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "UserAccount" }, null)</li>
        @if (User.Identity.IsAuthenticated)
        {
            <li>@Html.ActionLink("Logout", "Index", "Logout", new { area = "UserAccount" }, null)</li>
            <li>@Html.ActionLink("Verify Your Email Account", "Verify", "Register", new { area = "UserAccount" }, null)</li>
            <li>@Html.ActionLink("Change Password", "Index", "ChangePassword", new { area = "UserAccount" }, null)</li>
            <li>@Html.ActionLink("Change Password Reset Secret", "Index", "ChangeSecretQuestion", new { area = "UserAccount" }, null)</li>
            <li>@Html.ActionLink("Change Username", "Index", "ChangeUsername", new { area = "UserAccount" }, null)</li>
            <li>@Html.ActionLink("Change Email", "Index", "ChangeEmail", new { area = "UserAccount" }, null)</li>
            <li>@Html.ActionLink("Change Mobile Phone Number", "Index", "ChangeMobile", new { area = "UserAccount" }, null)</li>
            <li>@Html.ActionLink("Configure Client Certificates", "Index", "Certificate", new { area = "UserAccount" }, null)</li>
            <li>@Html.ActionLink("Configure Two Factor Authentication", "Index", "TwoFactorAuth", new { area = "UserAccount" }, null)</li>
            <li>@Html.ActionLink("Manage external provider", "Manage", "LinkedAccount", new { area = "UserAccount" }, null)</li>
            <li>@Html.ActionLink("Close Account", "Index", "CloseAccount", new { area = "UserAccount" }, null)</li>
        }
        else
        {
            <li>@Html.ActionLink("Login", "Index", "Login")</li>
            <li>@Html.ActionLink("Login with external provider", "Index", "LinkedAccount", new { area = "UserAccount" }, null)</li>
            <li>@Html.ActionLink("Email Username", "Index", "SendUsernameReminder", new { area = "UserAccount" }, null)</li>
            <li>@Html.ActionLink("Register", "Index", "Register", new { area = "UserAccount" }, null)</li>
            <li>@Html.ActionLink("Reset Password", "Index", "PasswordReset", new { area = "UserAccount" }, null)</li>
        }
        <li>@Html.ActionLink("Admin Account Lookup", "Index", "Home", new { area="Admin" }, null)</li>
    </ul>


    @RenderBody()

</body>
</html>
